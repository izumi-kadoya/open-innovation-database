<h1>User List</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Nickname</th>
      <th>Approved</th>
      <th>Admin</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.nickname %></td>
        <td>
          <%= form_for user, url: user_path(user), method: :patch do |f| %>
            <%= f.check_box :approved %>
            <%= f.submit 'Update' %>
          <% end %>
        </td>
        <td>
          <%= form_for user, url: user_path(user), method: :patch do |f| %>
            <%= f.check_box :admin %>
            <%= f.submit 'Update' %>
          <% end %>
        </td>
        <td>
          <%= link_to 'Delete', user_path(user), method: :delete, data: { confirm: 'Are you sure you want to delete this user?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
